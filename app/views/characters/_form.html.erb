<%= form_with model: character do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% character.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :gender %><br>
    <%= form.text_field :gender %>
  </div>

  <div>
    <%= form.label :birthdate %><br>
    <%= form.date_field :birthdate %><br>
  </div>


  <div>
    <%= form.label :height %><br>
    <%= form.number_field :height %><br>
  </div>

  <div>
    <%= form.label :weight %><br>
    <%= form.number_field :weight %><br>
  </div>

  <div>
    <%= form.label :home_location  %><br>
    <%= form.text_field :home_location %><br>
  </div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
